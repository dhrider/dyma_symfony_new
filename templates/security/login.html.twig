{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="block">
        <h2 class="pb-30">Connexion</h2>
        <form action="{{ path('login') }}" method="post">
            <div class="form-row">
                <label for="email">Email</label>
                <input type="text" id="email" name="_username" value="{{ username }}">
            </div>
            <div class="form-row">
                <label for="password">Mot de passe</label>
                <input type="password" id="password" name="_password">
            </div>
            <div class="form-row">
                <label for="remember_me">Se souvenir de moi</label>
                <input type="checkbox" id="remember_me" name="_remember_me">
            </div>
            <div class="d-flex flex-row">
                <button class="btn btn-primary mb-20">Connexion</button>
            </div>
            <div class="d-flex flex-column">
                <small class="mb-20"><a href="{{ path('signup') }}">Vous n'avez pas encode de compte ?</a></small>
                <small><a href="{{ path('reset-password-request') }}">Vous avez oubli√© votre mot de passe ?</a></small>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


            {% if error %}
                <li>{{ error.messageKey | trans(error.messageData, 'security') }}</li>
            {% endif %}
        </form>
    </div>
{% endblock %}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>

        {% block stylesheets %}
            <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
            <link rel="preconnect" href="https://fonts.googleapis.com">
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
            <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body class="d-flex flex-column">
        {{ include('partials/_header.html.twig') }}
        <div class="app-content app-container flex-fill d-flex flex-row-nowrap justify-content-center">
            <div class="content d-flex flex-row-nowrap flex-fill py-50">
                {{ include('partials/_siderbar.html.twig') }}
                <div class=" flex-fill">
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>
        {% for cat, list in app.flashes %}
            {% for message in list %}
                <div class="flash flash-{{ cat }}">{{ message }}</div>
            {% endfor %}
        {% endfor %}
        {{ include('partials/_footer.html.twig') }}
    </body>
</html>
